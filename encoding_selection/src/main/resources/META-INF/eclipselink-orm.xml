<entity-mappings
        xmlns="http://www.eclipse.org/eclipselink/xsds/persistence/orm"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.eclipse.org/eclipselink/xsds/persistence/orm http://www.eclipse.org/eclipselink/xsds/eclipselink_orm_2_1.xsd"
        version="2.1">
    <converter name="uriConverter"
               class="codecdb.dataset.persist.jpa.URIConverter"/>
    <converter name="dataTypeConverter"
               class="codecdb.dataset.persist.jpa.DataTypeConverter"/>
    <table-generator name="COL_GEN" allocation-size="50"
                     initial-value="1" table="seq_table" pk-column-name="name"
                     pk-column-value="COL_DATA" value-column-name="counter"/>

    <entity name="Column" class="codecdb.dataset.persist.jpa.ColumnWrapper">
        <table name="col_data"/>
        <attributes>
            <id name="id">
                <column name="id"/>
                <generated-value strategy="TABLE" generator="COL_GEN"/>
            </id>
            <basic name="origin">
                <column name="origin_uri"/>
                <convert>uriConverter</convert>
            </basic>
            <basic name="colIndex">
                <column name="idx"/>
            </basic>

            <basic name="colName">
                <column name="name"/>
            </basic>
            <basic name="colFile">
                <column name="file_uri"/>
                <convert>uriConverter</convert>
            </basic>
            <basic name="dataType">
                <column name="data_type"/>
                <convert>dataTypeConverter</convert>
            </basic>
            <one-to-one name="parentWrapper">
                <join-column name="parent_id"/>
                <cascade>
                    <cascade-all/>
                </cascade>
            </one-to-one>

            <element-collection name="features"
                                target-class="codecdb.dataset.feature.Feature" fetch="LAZY">
                <collection-table name="feature">
                    <join-column name="col_id"/>
                </collection-table>
                <batch-fetch type="JOIN"/>
            </element-collection>

            <element-collection name="infos" fetch="LAZY" target-class="java.lang.String">
                <map-key-column name="name"/>
                <column name="value"/>
                <collection-table name="col_info">
                    <join-column name="col_id"/>
                </collection-table>
                <batch-fetch type="JOIN"/>
            </element-collection>

        </attributes>

    </entity>
    <embeddable class="codecdb.dataset.feature.Feature">
        <attributes>
            <basic name="featureType">
                <column name="type"/>
            </basic>
            <basic name="name">
                <column name="name"/>
            </basic>
            <basic name="value">
                <column name="value"/>
            </basic>
        </attributes>
    </embeddable>


</entity-mappings>